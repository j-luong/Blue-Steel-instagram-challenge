<% if @pictures.any? %>
  <% @pictures.each do |picture| %>
    <%= link_to (image_tag picture.image.url(:thumb)), picture_path(picture) %>
    <br>
    <%= link_to picture.caption, picture_path(picture) %>
    <br><br>
  <% end %>
<% else %>
  <br>
  No pictures yet
<% end %>
<br><br>
<a href='/pictures/new'>Add a picture</a>
