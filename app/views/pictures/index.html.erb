<br><br>
<% if @pictures.any? %>
  <% @pictures.each do |picture| %>
    <%= link_to (image_tag picture.image.url(:thumb)), picture_path(picture) %>
    <br>
    <%= link_to picture.caption, picture_path(picture) %>
    <br>
    <% if user_signed_in? %>
      <% if picture.user_id == current_user.id %>
        <%= link_to "Edit picture", edit_picture_path(picture) %>
        <%= link_to "Delete picture", picture_path(picture), method: :delete %>
      <% end %>
    <% end %>
    <br><br>
  <% end %>
<% else %>
  <br>
  No pictures yet
<% end %>
<br><br>

<% if user_signed_in? %>
  <%= link_to "Add a picture", new_picture_path(@pictures) %>
<% end %>
